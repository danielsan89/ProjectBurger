
  <form method="POST" action="/hamburgers">
    <div class="form-group">
      <label class="label">BurgerName</label>
      <div class="control">
        <input class="form-control" name="name" type="text" placeholder="Name" required>
      </div>
    </div>
    <div class="form-group">
      <label class="label">Restaurant</label>

      <select class="form-control" name="restaurant">
        <% restaurants.forEach(restaurant => { %>
          <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
          <% }) %>
      </select>

    </div>
    <div class="form-group">
      <label class="label">Image</label>
      <div class="control">
        <input class="form-control" name="image" type="text" placeholder="Image" required>
      </div>
    </div>
    <div class="form-group">
      <label class="label">Ingredients</label>
      <div class="control">
        <textarea class="form-control" name="ingredients" placeholder="Ingredients"></textarea>
      </div>
    </div>
    <div class="control">
      <button class="btn btn-primary">Submit</button>
    </div>
  </form>
