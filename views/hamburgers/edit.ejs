<form method="POST" action="/hamburgers/<%= hamburger.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label class="label">Name</label>
    <div class="control">
      <input class="form-control" name="name" type="text" placeholder="Name" value="<%= hamburger.name %>">
    </div>
  </div>
  <div class="form-group">
    <label class="label">Restaurant</label>

    <select class="form-control" name="restaurant">
      <% restaurants.forEach(restaurant => { %>
        <option value="<%= restaurant.id %>" <% if(hamburger.restaurant.id === restaurant.id){ %>selected<% } %>><%= restaurant.name %></option>
        <% }) %>
    </select>

  </div>
  <div class="form-group">
    <label class="label">Image</label>
    <div class="control">
      <input class="form-control" name="image" type="text" placeholder="Image" value="<%= hamburger.image %>">
    </div>
  </div>
  <div class="form-group">
    <label class="label">Tasting Notes</label>
    <div class="control">
      <textarea class="form-control" name="tastingNotes" placeholder="Tasting Notes"><%= hamburger.tastingNotes %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="label">Ingredients</label>
    <div class="control">
      <textarea class="form-control" name="ingredients" placeholder="Ingredients"><%= hamburger.ingredients %></textarea>
    </div>
  </div>
  <div class="control">
    <button class="btn btn-primary">Submit</button>
  </div>
</form>
