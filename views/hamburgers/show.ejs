<div class="containerShow">
  <div class="card" style="width: 40rem;">
    <img class="card-img-top" src="<%= hamburger.image %>"  alt="Card image cap">
    <div class="card-block">
      <h4 class="card-title"><%= hamburger.name %></h4>
      <strong>RESTAURANT</strong><p>  <%= hamburger.restaurant %></p>
      <strong>USER</strong> <p> <%= hamburger.username %></p>
      <strong>INGREDIENTS</strong><p>  <%= hamburger.ingredients %></p>
      <form method="POST" action="/hamburgers/<%= hamburger.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <a class="btn btn-primary" href="/hamburgers/<%= hamburger.id %>/edit">Edit</a>
        <button class="btn btn-primary">Delete</button>
      </form>
      <%- include ../partials/_admin %>
    </div>
  </div>
</div>
